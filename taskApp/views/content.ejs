<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>タスク内容</title>
</head>
<body>
    <%- include('header') %>
<div class="container">
    <div class="content-container">
        <h1 class="my-3 content-title">タスク<%= task.id %>の詳細</h1>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <p class="card-text">タスク名：<%= task.name %>
            </p>
            <p class="card-text">カテゴリ：<%= task.category %>
            </p>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <% deadlines.forEach((element, i)=> { %>
                <p class="card-text">締め切り<%= i+1 %>：<%= element.deadline %>（<%= element.description %>）</p>
                <% }) %>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <% days.forEach((element, i)=> { %>
                <p class="card-text">イベント日程<%= i+1 %>：<%= element.startDay %> - <%= element.endDay %>
                </p>
                <% }) %>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center">
            <button id="editButton" class="btn btn-primary mybtn">編集</button>
        </div>
        <div class="d-flex justify-content-center">
            <button id="deleteButton" class="btn btn-primary mybtn">削除</button>
        </div>
    </div>
</div>

    <%- include('footer') %>


    <script>
        document.getElementById('editButton').addEventListener("click", () => {
            window.location.href = '/edit/<%= task.id %>'
        });
        document.getElementById('deleteButton').addEventListener("click", () => {
            if (window.confirm('削除しますか？')) {
                window.location.href = '/delete/<%= task.id %>'
            }
        });
    </script>
</body>

</html>
